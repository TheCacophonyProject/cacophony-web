{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "module": "es2020",
        "target": "es2020",
        "sourceMap": false,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "lib": ["ESNext", "dom", "dom.iterable"],
        "paths": {
            "@typedefs/*":  ["./*"],
        }
    },
    "exclude": [
        "node_modules",
        "./client/*.ts"
    ],
    "include": [
        "./**/*.ts",
    ]
}
