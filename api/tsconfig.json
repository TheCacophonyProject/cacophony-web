{
    "compilerOptions": {
        "strictNullChecks": false,
        "target": "es2020",
        "sourceMap": false,
        "module": "nodenext",
        "outDir": "../",
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "resolveJsonModule": true,
        "paths": {
            "@/*": ["./*"],
            "@typedefs/*":  ["../types/*"],
            "@schemas/*":  ["./json-schemas/*"],
            "@api/*":  ["./api/*"],
            "@models/*":  ["./models/*"],
            "@models":  ["./models/index.ts"],
            "@config":  ["./config.ts"],
            "@log":  ["./logging.ts"]
        }
    },
    "tsc-alias": {
        "verbose": true,
        "resolveFullPaths": true,
        "watch": true
    },
    "include": [
        "./models/**/*.ts",
        "./api/**/*.ts",
        "./scripts/**/*.ts",
        "./**/*.ts",
        "./*.ts",
        "../types/**/*.ts",
        "../types/**/*.js",
        "../types/**/*.json"
    ],
    "exclude": [
        "./node_modules/*",
        "./test/*",
        "./test-cypress/*",
        "../types/client/*"
    ],
    "watchOptions": {
        "excludeDirectories": [
            "/app/node_modules",
            "/app/node_modules/**",
            "/app/types/jsonSchemas",
            "/app/types/jsonSchemas/",
            "/app/types/jsonSchemas/**",
            "/app/types/node_modules",
            "/app/types/node_modules/**",
            "/app/types/client/**"
        ],
        "excludeFiles": [
            "*.schema.json",
            "/app/types/jsonSchemas/**/*.json",
            "/app/types/build-schemas.js",
            "/app/types/build-schemas.ts",
            "/app/types/schema-cache.json",
            "/app/types/client/**",
            "schema-cache.json"
        ]
    }
}
