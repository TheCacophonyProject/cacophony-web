{
  "name": "cacophony-api",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheCacophonyProject/cacophony-api.git"
  },
  "version": "0.0.1",
  "type": "module",
  "exports": "./Server.js",
  "aliases": {
    "@": "./",
    "@typedefs":  "../types",
    "@schemas":  "../api/json-schemas",
    "@api":  "./api",
    "@models":  "./models",
    "@config":  "./config.js",
    "@log":  "./logging.js"
  },
  "dependencies": {
    "apidoc": "^0.50.0",
    "@mapbox/node-pre-gyp": "^1.0.10",
    "apidoc-plugin-ts": "github:TheCacophonyProject/apidoc-plugin-ts#v1.1.0",
    "scale-color-perceptual": "^1.1.2",
    "aws-sdk": "^2.1381.0",
    "commander": "^8.1.0",
    "emailjs": "^4.0.2",
    "express": "^4.17.1",
    "express-validator": "^6.12.1",
    "express-winston": "^4.1.0",
    "fast-csv": "^3.7.0",
    "influx": "^5.9.2",
    "jsonschema": "^1.4.0",
    "jsonwebtoken": "^8.5.1",
    "levenshtein-edit-distance": "2.0.5",
    "lodash": "^4.17.13",
    "mime": "^2.4.4",
    "esm-module-alias": "^2.0.3",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.28",
    "multiparty": "^4.2.3",
    "passport": "^0.3.2",
    "passport-jwt": "^4.0.0",
    "pg": "^8.11.0",
    "sequelize": "^6.31.1",
    "sequelize-cli": "^6.6.0",
    "uuid": "^8.3.2",
    "winston": "^3.3.3",
    "handlebars": "^4.7.7",
    "jsdom": "^19.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.4",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/mime": "^2.0.3",
    "@types/node": "^18.15.3",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-utils": "^3.0.0",
    "prettier": "^2.8.8",
    "tsc-watch": "^4.4.0",
    "smtp-tester": "^2.0.1",
    "typescript": "^5.0.4"
  },
  "optionalDependencies": {
    "bcrypt": "^5.0.1",
    "sharp": "^0.32.1"
  },
  "scripts": {
    "lint": "eslint --ext .ts --ignore-path .gitignore . && (npx prettier --check './**/*.ts' !./apidoc/** || (echo \"Please run 'npm run lint:fix' to clean up formatting of files.\"; false))",
    "lint:fix": "eslint --fix --ext .ts --ignore-path .gitignore . && npx prettier --write './**/*.ts' !./apidoc/**",
    "apidoc": "apidoc -c ./apidoc.json -f \".*\\.ts$\" -i api/V1 -o apidoc/",
    "db-migrate": "sequelize db:migrate",
    "new-migration": "sequelize migration:generate --name",
    "dev": "docker compose build && docker compose up --force-recreate",
    "dev:bash": "docker compose exec server bash",
    "clean": "tsc --build --clean"
  }
}
